<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/toolbarHeader">

        <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/btnDrawerLayout"
                android:background="@drawable/ic_view_headline_white_18dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"/>

        <TextView
                android:text="@string/toeicPracticeReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp"
                android:layout_alignParentTop="true"
                android:id="@+id/tvTitle"
                android:layout_marginTop="18dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize20dp"/>

        <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnSettings"
                android:background="@drawable/ic_settings_white_18dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleViewListListeningTests"
            android:layout_below="@+id/toolbarHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>

