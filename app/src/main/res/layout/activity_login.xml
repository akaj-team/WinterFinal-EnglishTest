<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_screen">

    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/edtUsernameLogin"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/colorWhite"
            android:drawableStart="@drawable/ic_person_white_36dp"
            android:textColor="@color/colorWhite"
            android:autofillHints=""
            tools:targetApi="28"
            android:textColorLink="@color/colorYellow"/>

    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtPasswordLogin"
            app:layout_constraintTop_toBottomOf="@+id/edtUsernameLogin"
            android:hint="@string/password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/colorWhite"
            android:drawableStart="@drawable/ic_lock_white_36dp"
            android:textColor="@color/colorWhite"
            android:autofillHints=""
            tools:targetApi="28"
            android:textColorLink="@color/colorYellow"/>

    <Button
            android:text="@string/login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPasswordLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_button_login"
            android:textColor="@color/colorWhite" app:layout_optimizationLevel="none"/>

    <TextView
            android:text="@string/LoginUsingSocialAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSignUpUsingSocialAccount"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/textSize16dp"/>

    <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_facebook"
            android:id="@+id/imgFacebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.957"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:background="@drawable/bg_button_facebook"
            android:contentDescription="@string/facebook"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/tvToSignUpFragment"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSignUpUsingSocialAccount"
            app:layout_constraintVertical_bias="0.0"/>

    <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_google"
            android:id="@+id/imgGoogle"
            android:background="@drawable/bg_button_email"
            android:contentDescription="@string/gmail"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSignUpUsingSocialAccount" android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/tvToSignUpFragment"/>

    <TextView
            android:text="@string/dontHaveAnAccountYet"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/tvToSignUpFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorWhite"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="@dimen/textSize16dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSignUpUsingSocialAccount"/>

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"/>

</android.support.constraint.ConstraintLayout>
