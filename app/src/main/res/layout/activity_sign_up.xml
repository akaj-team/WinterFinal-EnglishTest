<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:background="@drawable/bg_signup_screen">

    <TextView
            android:text="@string/signUpANewAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSignupTitle"
            android:layout_marginTop="@dimen/textSize30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize30dp"
            android:fontFamily="serif"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtUsernameSignup"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSignupTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:hint="@string/username"
            android:drawableStart="@drawable/ic_person_white_36dp"
            android:autofillHints="@string/username"
            tools:targetApi="28"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtPasswordSignup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:hint="@string/password"
            android:drawableStart="@drawable/ic_lock_white_36dp"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintTop_toBottomOf="@+id/edtUsernameSignup"
            android:autofillHints="@string/password"
            tools:targetApi="28"/>
    <Button
            android:text="@string/signUp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignup"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPasswordSignup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_button_signup" android:textColor="@color/colorWhite"/>

</android.support.constraint.ConstraintLayout>
