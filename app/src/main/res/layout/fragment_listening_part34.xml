<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardViewAudioPart34"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen10dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/imgStatePart34"
                    android:layout_width="@dimen/dimen30dp"
                    android:layout_height="@dimen/dimen30dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:src="@drawable/ic_play_circle_outline_black_24dp"
                    android:textStyle="bold"/>

            <SeekBar android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:id="@+id/seekBarPlayPart34"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleViewQuestionListening"
            android:layout_width="match_parent"
            android:layout_below="@+id/cardViewAudioPart34"
            android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
