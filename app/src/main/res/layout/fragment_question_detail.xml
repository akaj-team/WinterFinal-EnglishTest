<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLittleGrey">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:id="@+id/cardViewQuestionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:text="@string/questionDetailHere"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:layout_marginRight="@dimen/dimen10dp"
                android:layout_marginTop="@dimen/dimen10dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgQuestionTitle"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dimen16dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_marginBottom="@dimen/dimen10dp"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:visibility="gone"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen120dp"
                    android:id="@+id/tvQuestionTitle"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dimen16dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_marginBottom="@dimen/dimen10dp"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardViewQuestionTitle"
                android:layout_margin="@dimen/dimen10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvQuestionContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen20dp"
                        android:paddingEnd="@dimen/dimen20dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_marginBottom="@dimen/dimen10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dimen16dp"
                        android:visibility="gone"/>

                <RadioGroup
                        android:id="@+id/rgAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RadioButton
                            android:id="@+id/rbAnswerA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dimen20dp"
                            android:paddingEnd="@dimen/dimen20dp"
                            android:paddingTop="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/dimen10dp"
                            android:background="@drawable/bg_answer"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/dimen16dp"
                            android:button="@null"/>

                    <View
                            android:id="@+id/divider2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="@dimen/dimen20dp"
                            android:layout_marginEnd="@dimen/dimen20dp"
                            android:background="?android:attr/listDivider"/>

                    <RadioButton
                            android:id="@+id/rbAnswerB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dimen20dp"
                            android:paddingEnd="@dimen/dimen20dp"
                            android:paddingTop="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/dimen10dp"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/bg_answer"
                            android:textSize="@dimen/dimen16dp"
                            android:button="@null"/>

                    <View
                            android:id="@+id/divider3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="@dimen/dimen20dp"
                            android:layout_marginEnd="@dimen/dimen20dp"
                            android:background="?android:attr/listDivider"/>

                    <RadioButton
                            android:id="@+id/rbAnswerC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dimen20dp"
                            android:paddingEnd="@dimen/dimen20dp"
                            android:paddingTop="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/dimen10dp"
                            android:background="@drawable/bg_answer"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/dimen16dp"
                            android:button="@null"/>

                    <View
                            android:id="@+id/divider4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="@dimen/dimen20dp"
                            android:layout_marginEnd="@dimen/dimen20dp"
                            android:background="?android:attr/listDivider"/>

                    <RadioButton
                            android:id="@+id/rbAnswerD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dimen20dp"
                            android:paddingEnd="@dimen/dimen20dp"
                            android:paddingTop="@dimen/dimen10dp"
                            android:paddingBottom="@dimen/dimen10dp"
                            android:background="@drawable/bg_answer"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/dimen16dp"
                            android:button="@null"/>

                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen10dp"
                android:visibility="gone">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <Button
                        android:id="@+id/tvState"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/ic_play_arrow_blue_300_18dp"
                        android:textStyle="bold"/>

                <SeekBar android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:id="@+id/seekBarPlay"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
