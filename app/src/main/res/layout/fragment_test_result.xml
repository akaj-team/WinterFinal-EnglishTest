<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCorrect"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvCOngratulations"
                    android:textSize="@dimen/textSize16dp"/>

            <android.support.constraint.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="190dp"
                    android:id="@+id/guideline"/>

            <TextView
                    android:text="@string/score40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCorrectAnswer"
                    app:layout_constraintStart_toStartOf="@+id/guideline"
                    android:layout_marginStart="10dp" android:layout_marginTop="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvCOngratulations"/>

            <TextView
                    android:text="@string/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDuration" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvCorrect" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp" android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize16dp"/>

            <TextView
                    android:text="@string/timeDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDurationTime" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvCorrectAnswer"
                    app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="10dp"/>

            <TextView
                    android:text="@string/congratulations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCOngratulations"
                    android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/colorRed"
                    android:textSize="@dimen/textSize20dp"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
