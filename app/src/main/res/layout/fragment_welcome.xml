<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/welcomeFragment"
        tools:context=".WelcomeFragment">

    <TextView
            android:text="@string/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWelcome"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:textSize="@dimen/textSize30dp"
            android:textColor="@color/colorRed"/>

    <TextView
            android:text="@string/chooseOneTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvChooseOneTest"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorRed"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgListeningTest"
            android:src="@drawable/img_listening_test"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tvChooseOneTest"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:contentDescription="@string/imageListeningTest"/>

    <ImageView
            android:src="@drawable/img_reading_test"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgReadingTest"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tvChooseOneTest"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:contentDescription="@string/imageReadingTest"/>

</android.support.constraint.ConstraintLayout>
