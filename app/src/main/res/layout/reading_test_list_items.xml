<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTestName"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textSize16dp"/>

        <TextView
                android:text="@string/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTime"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTestName"
                android:layout_marginStart="80dp"/>

        <TextView
                android:text="@string/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvScore" android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTestName"
                android:layout_marginEnd="80dp"/>

        <TextView
                android:text="@string/timeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTimeDisplay"
                app:layout_constraintTop_toBottomOf="@+id/tvTime"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp"
                android:textColor="@color/colorBlack"/>

        <TextView
                android:text="@string/score40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvScoreDisplay"
                app:layout_constraintTop_toBottomOf="@+id/tvScore"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="90dp"
                android:textColor="@color/colorBlack"/>

        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnDoTest"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_play_arrow_blue_300_18dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@drawable/ic_line"
                android:id="@+id/imageView"
                android:layout_marginTop="110dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:background="@color/colorGrey"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
